{
	"manifest_version": 2,
	"name": "Orandja Stream Notifier Beta",
	"version": "4.0.2",
	"default_locale": "en",
	"description": "Follow your favorite streamers on any platform.",
	"icons": {
		"48": "static/icon48.png",
		"128": "static/icon128.png"
	},

	"browser_action": {
		"default_popup": "main_window/app.html"
	},

	"background": {
		"scripts": [
			"App.js",
			"Chrome.js"
		]
	},

	"permissions": [
		"activeTab",
		"notifications",
		"storage",
		"unlimitedStorage",
		"*://*.mixer.com/*",
		"*://*.embedly.com/*",
		"*://*.livestream.com/*",
		"*://*.smashcast.tv/*",
		"*://*.hitbox.tv/*",
		"*://*.dailymotion.com/*",
		"*://*.dmcdn.net/*",
		"*://*.twitch.tv/*",
		"*://*.jtvnw.net/",
		"*://*.beam.pro/api/*",
		"*://*.ggpht.com/*",
		"*://*.ytimg.com/*",
		"*://*.youtube.com/*",
		"*://*.picarto.tv/*"
	],
	"web_accessible_resources": [],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}